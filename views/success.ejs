        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- * Custom CSS LINK  -->
    <link rel="stylesheet" href="./CSS/style.css">

    <!-- * Custom CSS LINK  -->
    <link rel="stylesheet" href="./CSS/ejsStyle.css">

    <!-- success ejs css file -->
    <link rel="stylesheet" href="../CSS/success.css">


    <title>
        <%- title %>
    </title>
    <style>
        .far,
        .fas {
            font-size: 8rem;
        }
    </style>
