<body>

    <!-- - Including navbar file from components folder -->
    <%- include('./components/navbar') -%>

        <% if( value=="" ){%>
            <div class="alert alert-danger text-center " role="alert">
                <%= errmsg %>
            </div>
            <%} %>

                <% if(msg !="" ) {%>
                    <div class="alert alert-success text-center " role="alert">
                        <%= msg %>
                    </div>
                    <%} %>

                        <!-- icon -->
                        <div class="container my-3 d-flex justify-content-center">
                            <% if(value !="" ){%>
                                <i class="far fa-check-square successIcon"></i>

                                <%}else{%>
                                    <i class="fas fa-times"></i>
                                    <%} %>

                        </div>


                        <div class="container my-5  d-flex justify-content-center">

                            <a href="/" class="btn successButtons mx-2"> Home </a>
                            <% if( value=="" ){%>

                                <a href="/data" class="btn  mx-2"> Retry </a>
                                <%} else{%>

                                    <a href="/data" class="btn  mx-2 successButtons"> View All User </a>
                                    <%} %>

                                        <% if( value !="" ){%>
                                            <a href="/history" class="btn btn-dark mx-2 successButtons"> Transaction History </a>

                                            <%} %>

                        </div>




                        <!-- - Including footer file from component folder which contain (body closing tag) -->
                        <%- include('./components/footer') -%>